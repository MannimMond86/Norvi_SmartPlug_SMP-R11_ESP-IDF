menu "WiFi Settings"

    config IS_ACTIVATED_WIFI
        bool "Enable WiFi Settings"
        default y

    if IS_ACTIVATED_WIFI

    config WIFI_SSID
            string "WiFi SSID"
            default "labor"
            help
                SSID (network name) for the example to connect to.

        config WIFI_PASSWORD
            string "WiFi Password"
            default "TPP_Netzwerk2024!"
            help
                WiFi password (WPA or WPA2) for the example to use.

    endif # IS_ACTIVATED_WIFI

endmenu